{
  "name": "aistory-server",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "user:role": "tsx src/scripts/set-user-role.ts",
    "admin:grant": "tsx src/scripts/set-user-role.ts --role admin",
    "admin:revoke": "tsx src/scripts/set-user-role.ts --role user"
  },
  "dependencies": {
    "@fastify/helmet": "^13.0.2",
    "@fastify/cors": "^11.0.1",
    "@fastify/rate-limit": "^10.2.1",
    "@libsql/client": "^0.15.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.39.3",
    "fastify": "^5.2.1",
    "jose": "^6.0.11",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^22.19.3",
    "drizzle-kit": "^0.31.1",
    "pino-pretty": "^13.1.2",
    "tsx": "^4.21.0",
    "typescript": "~5.9.3"
  },
  "packageManager": "pnpm@9.12.0"
}
